#!/bin/bash

me=$(basename $0)

usage="

NAME
  ${me} - computes the power set of a set.

SYNOPSIS
  ${me} [OPTIONS] datafile
  ${me} < datafile
  cat datafile | ${me} 

DESCRIPTION
  ${me} reads one item per line of stdin and then outputs on stdout the
  power set.

OPTIONS
  -h  Displays help message.

AUTHOR
  Berend M. Tober

"

n=0
tmpfile=".${me}.$$"
trap 'rm "${tmpfile}"' EXIT
touch "${tmpfile}"

infile="-"

while [[ $# -gt 0 ]]
do
  case "${1}" in
    -h)
      echo "${usage}"
      exit
      ;;
    -*)
      echo "Invalid option '${1}'"
      exit
      ;;
  esac
  infile="${1--}"
  shift
done  

cat "${infile}" | while read f
do
  cat "${tmpfile}" | while read g
  do
    echo -e "${f}\t${g}" | tee -a "${tmpfile}"
  done

  echo "${f}" | tee -a "${tmpfile}"
done
echo ""

