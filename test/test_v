. assertion

[[ -d results ]] || mkdir results

echo "Testing vector scripts"

vdot  data/v1.dat data/v2.dat  > results/v.out 
vdot  data/v1.dat data/v1.dat >> results/v.out 
vdot  data/v2.dat data/v2.dat >> results/v.out 
vsum  data/v1.dat data/v2.dat >> results/v.out 
vdiff data/v1.dat data/v2.dat >> results/v.out 
vdiff data/v2.dat data/v1.dat >> results/v.out 
vdiff data/v1.dat data/v1.dat >> results/v.out 

echo
assert 'diff expected/v.out results/v.out &> /dev/null'

echo
echo "PASS: ${success_count}"
echo "FAIL: ${failure_count}"
